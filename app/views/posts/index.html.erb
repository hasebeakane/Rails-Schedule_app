<h2>スケジュール一覧</h2>

<% if flash[:notice] %>
 <p class="notice"><%= flash[:notice] %></p>
<% end %>

<div class="post-list">
<table>
    <thead>
     <tr>
         <th>id</th>
         <th>タイトル</th>
         <th>開始日</th>
         <th>終了日</th>
         <th>終日</th>
         <th>スケジュール更新日時</th>
         <th>確認</th>
         <th>編集</th>
         <th>削除</th>
     </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.start_at.strftime('%Y年%m月%d日') %></td>
            <td><%= post.end_at.strftime('%Y年%m月%d日') %></td>
            <td><% if post.all_day == true %>
                 ○
                 <% else post.all_day == false %>
                  
                <% end %>
            </td>
            <td><%= post.updated_at.strftime('%Y年%m月%d日 %H時%M分') %></td>
            <td><%= link_to "確認", post %></td>
            <td><%= link_to "編集", [:edit, post] %></td>
            <td><%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか？"} %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<p class="post-link"><%= link_to "スケジュール新規登録", "/posts/new" %></p>
</div>

 <footer>
     <%= render "shared/post" %>
     <p class="count">スケジュール合計:<%= @posts.count %></p>
 </footer>
